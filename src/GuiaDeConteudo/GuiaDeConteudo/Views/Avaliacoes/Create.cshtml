@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

    <script>
        var idMaterial;
        var strID = "id_material";
        var strCPF = "cpf_usuario";
        window.onload = CapturaParametrosUrl();

        /*
            Captura parâmetros de URL com JS
        */

        function CapturaParametrosUrl() {

            //captura a url da página
            var url = window.location.href;

            //tenta localizar o ?
            var res = url.split('?');

            if (res[1] !== undefined) {
                //tenta localizar os & (pode haver mais de 1)
                var parametros = res[1].split('&');

                //qtd. de parâmetros que serão tratados pelo laço.
                var qtdParametrosParaLer = parametros.length;
                console.log("Quantidade Parâmetros: "+qtdParametrosParaLer);



                for (var cont = 0; cont <= qtdParametrosParaLer*2; cont++) {
                    if (parametros[cont] !== undefined) {
                        captura = parametros[cont].split('=');
                        console.log("Parametro: " + parametros[cont]);

                        if (captura[0] === strID) {
                            document.getElementById(strID).value = captura[1];
                        }

                        if (captura[0] === strCPF) {
                            document.getElementById(strCPF).value = captura[1];
                        }
                    }
                }
            }
        }
    </script>
